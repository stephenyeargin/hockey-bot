{
  "name": "hockey-bot",
  "version": "1.0.0",
  "description": "Gets latest playoff odds and posts to Mastodon",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "start:dev": "LOG_LEVEL=debug node src/index.js | pino-pretty",
    "lint": "eslint ./src",
    "lint:fix": "eslint --fix ./src",
    "cache:clear": "LOG_LEVEL=debug node src/index.js --cache:clear | pino-pretty",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js ./src/ --detectOpenHandles",
    "prepare": "husky"
  },
  "type": "module",
  "author": "stephen@yearg.in",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.7",
    "axios-retry": "^4.0.0",
    "csv-parse": "^5.5.3",
    "dayjs": "^1.11.10",
    "form-data": "^4.0.0",
    "pino": "^8.19.0",
    "pureimage": "^0.4.13",
    "redis": "^4.6.13"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "nock": "^13.5.4",
    "pino-pretty": "^10.3.1"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  },
  "jest": {
    "globalSetup": "./src/test/global-setup.cjs"
  },
  "volta": {
    "node": "20.11.1"
  }
}
